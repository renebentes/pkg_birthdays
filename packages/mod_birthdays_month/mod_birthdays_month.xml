	<description>MOD_BIRTHDAYS_MONTH_XML_DESCRIPTION</description>
	<files>
		<filename module="mod_birthdays_month">mod_birthdays_month.php</filename>
		<folder>tmpl</folder>
		<filename>mod_birthdays_month.xml</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<filename>LICENSE</filename>
