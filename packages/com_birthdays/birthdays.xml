	<authorUrl></authorUrl>
	<version>1.1</version>
	<description>COM_BIRTHDAYS_XML_DESCRIPTION</description>
	<scriptfile>script.php</scriptfile>
	<install>
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	<files folder="site">
		<folder>controllers</folder>
		<folder>helpers</folder>
		<folder>models</folder>
		<folder>views</folder>
		<filename>birthdays.php</filename>
		<filename>controller.php</filename>
		<filename>index.html</filename>
		<filename>router.php</filename>
	</files>
	<languages folder="site">
		<language tag="pt-BR">language/pt-BR/pt-BR.com_birthdays.ini</language>
	</languages>
	<media folder="media" destination="com_birthdays">
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
		<filename>index.html</filename>
	</media>
	<administration>
		<menu img="../media/com_birthdays/images/menu/birthday.png">com_birthdays</menu>
		<submenu>
			<menu link="option=com_birthdays" view="birthdays" img="../media/com_birthdays/images/menu/birthday.png" alt="Birthdays/Birthdays">com_birthdays</menu>
		</submenu>
		<files folder="admin">
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>language</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
			<filename>birthdays.php</filename>
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>index.html</filename>
		</files>
		<languages folder="admin">
			<language tag="pt-BR">language/pt-BR/pt-BR.com_birthdays.ini</language>
			<language tag="pt-BR">language/pt-BR/pt-BR.com_birthdays.sys.ini</language>
		</languages>
	</administration>
</extension>