<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="details" addfieldpath="/administrator/components/com_birthdays/models/fields">
		<field name="id" type="text" default="0" readonly="true" class="readonly" label="JGLOBAL_FIELD_ID_LABEL" description="JGLOBAL_FIELD_ID_DESC" />
		<field name="name" type="text" class="inputbox" size="40" required="true" label="COM_BIRTHDAYS_FIELD_NAME_LABEL" description="COM_BIRTHDAYS_FIELD_NAME_DESC" />
		<field name="grade" type="list" class="inputbox" size="1" required="true" default="1" label="COM_BIRTHDAYS_FIELD_GRADE_LABEL" description="COM_BIRTHDAYS_FIELD_GRADE_DESC">
			<option value="1">COM_BIRTHDAYS_GRADE_1</option>
			<option value="2">COM_BIRTHDAYS_GRADE_2</option>
			<option value="3">COM_BIRTHDAYS_GRADE_3</option>
			<option value="4">COM_BIRTHDAYS_GRADE_4</option>
			<option value="5">COM_BIRTHDAYS_GRADE_5</option>
			<option value="6">COM_BIRTHDAYS_GRADE_6</option>
			<option value="7">COM_BIRTHDAYS_GRADE_7</option>
			<option value="8">COM_BIRTHDAYS_GRADE_8</option>
			<option value="9">COM_BIRTHDAYS_GRADE_9</option>
			<option value="10">COM_BIRTHDAYS_GRADE_10</option>
			<option value="11">COM_BIRTHDAYS_GRADE_11</option>
			<option value="12">COM_BIRTHDAYS_GRADE_12</option>
			<option value="13">COM_BIRTHDAYS_GRADE_13</option>
			<option value="14">COM_BIRTHDAYS_GRADE_14</option>
			<option value="15">COM_BIRTHDAYS_GRADE_15</option>
			<option value="16">COM_BIRTHDAYS_GRADE_16</option>
		</field>
		<field name="nickname" type="text" class="inputbox" size="20" required="true" label="COM_BIRTHDAYS_FIELD_NICKNAME_LABEL" description="COM_BIRTHDAYS_FIELD_NICKNAME_DESC" />
		<field name="picture" type="media" class="inputbox" directory="birthdays" label="COM_BIRTHDAYS_FIELD_PICTURE_LABEL" description="COM_BIRTHDAYS_FIELD_PICTURE_DESC" />
		<field name="birthdate" type="calendar" class="inputbox" size="22" format="%Y-%m-%d %H:%M:%S" filter="user_utc" required="true" label="COM_BIRTHDAYS_FIELD_BIRTHDATE_LABEL" description="COM_BIRTHDAYS_FIELD_BIRTHDATE_DESC" />
		<field name="alias" type="text" class="inputbox" size="40" label="JFIELD_ALIAS_LABEL" description="JFIELD_ALIAS_DESC" />
		<field name="published" type="list" class="inputbox" size="1" default="1" label="JSTATUS" description="JFIELD_PUBLISHED_DESC" filter="intval">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="2">JARCHIVED</option>
			<option value="-2">JTRASHED</option>
		</field>
		<field name="language" type="contentlanguage" label="JFIELD_LANGUAGE_LABEL" description="COM_BIRTHDAYS_FIELD_LANGUAGE_DESC" class="inputbox" >
			<option value="*">JALL</option>
		</field>
		<field name="access" type="accesslevel" class="inputbox" size="1" label="JFIELD_ACCESS_LABEL" description="JFIELD_ACCESS_DESC" />
		<field name="ordering" type="ordering" class="inputbox" label="JFIELD_ORDERING_LABEL" description="JFIELD_ORDERING_DESC" />
	</fieldset>

	<fieldset name="publish">
		<field name="created" type="calendar" class="inputbox" size="22" format="%Y-%m-%d %H:%M:%S" filter="user_utc" label="JGLOBAL_FIELD_CREATED_LABEL" description="JGLOBAL_FIELD_CREATED_DESC" />
		<field name="created_by" type="user" label="JGLOBAL_FIELD_CREATED_BY_LABEL" description="JGLOBAL_FIELD_CREATED_BY_DESC" />
		<field name="created_by_alias" type="text" class="inputbox" size="20" label="JGLOBAL_FIELD_CREATED_BY_ALIAS_LABEL" description="JGLOBAL_FIELD_CREATED_BY_ALIAS_DESC" />
		<field name="version" type="text" class="readonly" size="6" readonly="true" filter="unset" label="COM_BIRTHDAYS_FIELD_VERSION_LABEL" description="COM_BIRTHDAYS_FIELD_VERSION_DESC" />
		<field name="modified" type="calendar" class="readonly" size="22" readonly="true" format="%Y-%m-%d %H:%M:%S" filter="user_utc" label="JGLOBAL_FIELD_MODIFIED_LABEL" description="COM_BIRTHDAYS_FIELD_MODIFIED_DESC" />
		<field name="modified_by" type="user" class="readonly" readonly="true" filter="unset" label="JGLOBAL_FIELD_MODIFIED_BY_LABEL" />
		<field name="publish_up" type="calendar" class="inputbox" format="%Y-%m-%d %H:%M:%S" size="22" filter="user_utc" label="JGLOBAL_FIELD_PUBLISH_UP_LABEL" description="JGLOBAL_FIELD_PUBLISH_UP_DESC" />
		<field name="publish_down" type="calendar" class="inputbox" format="%Y-%m-%d %H:%M:%S" size="22" filter="user_utc" label="JGLOBAL_FIELD_PUBLISH_DOWN_LABEL" description="JGLOBAL_FIELD_PUBLISH_DOWN_DESC" />
		<field name="checked_out" type="hidden" filter="unset" />
		<field name="checked_out_time" type="hidden" filter="unset" />
		<field name="hits" type="text" class="readonly" size="6" readonly="true" filter="unset" label="JGLOBAL_HITS" description="COM_BIRTHDAYS_FIELD_HITS_DESC" />
	</fieldset>
</form>